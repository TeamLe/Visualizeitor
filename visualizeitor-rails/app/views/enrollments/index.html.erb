<%- model_class = Enrollment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <% if @student.nil?%>
        <th>Estudante</th>
      <%end%>

      <th>Nota</th>
      <th>Frequência</th>
      <th><%= model_class.human_attribute_name(:year) %></th>
      <th>Semestre</th>
      <th>Situação</th>
      <th>Tipo</th>
      <th>Disciplina</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @enrollments.each do |enrollment| %>
      <tr>
        <td><%= link_to enrollment.id, enrollment_path(enrollment) %></td>

        <% if @student.nil?%>
          <td><%= enrollment.student.name %></td>
        <%end%>

        <td><%= enrollment.grade %></td>
        <td><%= enrollment.frequency %></td>
        <td><%= enrollment.year %></td>
        <td><%= enrollment.semester %></td>
        <td><%= enrollment.status %></td>
        <td><%= enrollment.enrollment_type %></td>
        <td><%= enrollment.course.name %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_enrollment_path(enrollment), :class => 'btn' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_enrollment_path,
            :class => 'btn btn-primary' %>
